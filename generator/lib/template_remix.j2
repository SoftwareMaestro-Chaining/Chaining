---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ namespace }}"
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
   namespace: "{{ namespace }}"
   name: "{{ pod_name }}"
spec:
  replicas: 1
  strategy: {}
  template:
    metadata:
      labels:
       app: ide
       name: "{{ label.name }}"
    spec:
        containers:
          - name: remix-ide
            image:  redtree941/remix-ide
            ports:
                - containerPort: 8080
                  hostPort : {{ hostPort }}
            command: ["npm"]
            args: ["start"]
