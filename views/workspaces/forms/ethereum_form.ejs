<div id="modal_ethereum" class="modal modal-fixed-footer">
  <form class="col s12" action="/workspaces/<%=workspace.id%>/ethereums/" method="post" id="ethereum-form">
    <div class="modal-content">
      <div class="card-panel">
        <h4 class="header2">Create a new Ethereum</h4>
          <div class="row">

              <div class="row">
                <div class="input-field col s6">
                  <input id="ethereum_name" type="text" name="name">
                  <label for="ethereum_name">Name</label>
                </div>
                <div class="input-field col s6">
                  <input id="ethereum_description" type="text" name="description">
                  <label for="ethereum_description">Description</label>
                </div>
              </div>

              <div class="divider"></div>

              <input id="ethereum_workspaceId" name="workspaceId" type="hidden" value="<%=workspace._id%>">
              
              <div class="row">
<!--                 <div class="input-field col s6">
                  <input id="ethereum_endpoint" type="text" name="endpoint">
                  <label for="ethereum_endpoint">Endpoint</label>
                </div> -->
                <div class="input-field col s6">
                  <input id="ethereum_port" type="text" name="port">
                  <label for="ethereum_port">Port</label>
                </div>
              </div>
           </div>
        </div>
      </div>

      <div class="modal-footer">
        <button href="#" class="waves-effect waves-red btn-flat modal-action modal-close preloader-trigger-btn" type="submit" id="ethereumFormSubmitBtn">Submit</button>
        
        <!-- <button class="waves-effect waves-green btn-flat modal-action modal-close">Cancel</button> -->
      </div>

  </form>


    </div>
</div>


