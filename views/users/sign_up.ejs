<% layout('../layout/users.layout.ejs') -%>

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
      <form class="login-form" action="/users" method="post">
        <div class="row">
          <div class="input-field col s12 center">
            <h4>Register</h4>
            <p class="center">Join to our community now !</p>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
            <input id="username" type="text" name="username" value="<%=typeof form !=='undefined' ? form.username : ''%>">
            <label for="username" class="center-align">Username</label>

          </div>
            <label class="yellow right">
              <%= typeof result !== 'undefined' && typeof result.errors !== 'undefined' && typeof result.errors.username !== 'undefined'? result.errors.username.message : "" %>
            </label>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-communication-email prefix"></i>
            <input id="email" type="email" name="email" value="<%=typeof form !== 'undefined' ? form.email : ''%>">
            <label for="email" class="center-align">Email</label>
          </div>
          <label class="yellow right">
            <%= typeof result !== 'undefined' && typeof result.errors !== 'undefined' && typeof result.errors.email !== 'undefined'? result.errors.email.message : "" %>
          </label>          
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            <input id="password" type="password" name="password">
            <label for="password">Password</label>
          </div>
          <label class="yellow right">
            <%= typeof result !== 'undefined' && typeof result.errors !== 'undefined' && typeof result.errors.password !== 'undefined'? result.errors.password.message : "" %>
          </label>          
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            <input id="password-again" type="password" name="passwordConfirmation">
            <label for="password-again">Password again</label>
          </div>
          <label class="yellow right">
            <%= typeof result !== 'undefined' && typeof result.errors !== 'undefined' && typeof result.errors.passwordConfirmation !== 'undefined'? result.errors.passwordConfirmation.message : "" %>
          </label>             
        </div>
        <div class="row">
          <div class="input-field col s12">
            <button class="btn waves-effect waves-light col s12" type="submit">Register Now</button>
          </div>
          <div class="input-field col s12">
            <p class="margin center medium-small sign-up">Already have an account? <a href="/users/sign_in">Login</a></p>
          </div>
        </div>
      </form>
    </div>
  </div>

